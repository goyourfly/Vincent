<?xml version="1.0" encoding="utf-8"?>
<net.soulwolf.widget.ratiolayout.widget.RatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    app:datumRatio="datumWidth"
    app:heightRatio="16.0"
    app:widthRatio="16.0">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

</net.soulwolf.widget.ratiolayout.widget.RatioFrameLayout>
